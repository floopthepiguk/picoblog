%ul.inline-list.actions


  %li
    = link_to user_post_path(post.user, post), class: 'comment-action' do
      = post.comments_count
      %span.icon-bubbles
    
  - if can? :manage, post
    %li
      = link_to edit_user_post_path(post.user, post) do
        .icon-pencil.edit-action
    %li
      = link_to [post.user, post], :method => :delete, :data => { :confirm => 'Are you sure?' } do
        .icon-remove.destroy-action


