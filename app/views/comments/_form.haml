%div{ ng: { controller: 'CommentFormController', submit: 'hide_form()' } }

  %a.button{ href: "#", ng: { hide: 'form_visible', click: 'show_form()' } } 
    Reply

  .panel.ng-hide{ ng: { show: 'form_visible' } }
    %h3 New Comment

    = form_for [post, Comment.new], remote: true do |f|
      
      .field
        =render partial: 'icons/icon_fields', locals: { f: f, selected_icon: 1 }
      %br
      .field
        = f.label :color
        = f.color_field :color 
      .actions
        = f.submit 'Reply', class: :button
        %a{ href: '#', ng: { click: 'hide_form()'} } Cancel 
